            android:width="24dp"
            android:height="40dp"
            android:viewportWidth="24"
            android:viewportHeight="40">
            <!-- 感叹号竖线 -->
            <path
                android:fillColor="@android:color/white"
                android:pathData="M12,4 L16,4 L16,30 L12,30 L8,30 L8,4 Z" />
            <!-- 感叹号圆点 -->
            <path
                android:fillColor="@android:color/white"
                android:pathData="M12,34 C14.2,34 16,32.2 16,30 C16,27.8 14.2,26 12,26 C9.8,26 8,27.8 8,30 C8,32.2 9.8,34 12,34 Z" />

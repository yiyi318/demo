<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/item_article_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F5F5F5" /> <!-- 按下时的颜色 -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- 默认颜色 -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#EEEEEE" />
        </shape>
    </item>
</selector>